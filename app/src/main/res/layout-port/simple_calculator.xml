<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SimpleCalcScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SimpleCalculator">


    <EditText
        android:id="@+id/resultPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:autofillHints="@string/displayResult"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="end"
        android:hint="@string/displayResult"
        android:inputType="none"
        android:textColor="@color/lime"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:autofillHints=""
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:gravity="end"
        android:inputType="none"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:maxLength="11"
        android:maxLines="1"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5">

        <!-- Row 1 -->
        <Button
            android:id="@+id/buttonClear"
            style="@style/CancelButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="@string/c"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonBack"
            style="@style/BackButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="@string/backspace"
            android:textSize="24sp" />



        <Button
            android:id="@+id/buttonChangeSign"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="@string/plus_minus"
            android:textSize="24sp" />





        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button8"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button9"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/multiply"
            android:textSize="24sp" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/minus"
            android:textSize="24sp" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/plus"
            android:textSize="24sp" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button0"
            style="@style/NumberButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/_0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/dot"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/equals"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/OtherButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/divide"
            android:textSize="24sp" />

    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>